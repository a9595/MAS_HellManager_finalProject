<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_torture_dep"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tieorange.edu.hellmanager.TortureDepActivity">

    <TextView
        android:text="Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        app:layout_constraintLeft_toLeftOf="@+id/activity_torture_dep"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/activity_torture_dep"
        android:layout_marginTop="32dp" />

    <Button
        android:text="Add this maderfaker"
        android:layout_width="368dp"
        android:layout_height="49dp"
        android:id="@+id/button4"
        app:layout_constraintLeft_toLeftOf="@+id/activity_torture_dep"
        app:layout_constraintRight_toRightOf="@+id/activity_torture_dep"
        app:layout_constraintBottom_toBottomOf="@+id/activity_torture_dep" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/editText2"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintBottom_toBottomOf="@+id/textView" />

</android.support.constraint.ConstraintLayout>
