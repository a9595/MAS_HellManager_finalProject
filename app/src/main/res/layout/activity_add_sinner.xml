<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context=".Activity.AddSinnerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:id="@+id/first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last name"
            android:inputType="textPersonName" />


        <Switch
            android:id="@+id/is_liar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Liar" />

        <EditText
            android:id="@+id/amount_of_lies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Amount of lies"
            android:inputType="number" />

        <Switch
            android:id="@+id/is_murderer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Murderer" />

        <EditText
            android:id="@+id/amount_of_victims"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Amount of victims"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birth date:" />

        <com.greenfrvr.hashtagview.HashtagView
            android:id="@+id/sinsHashtags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:selectionMode="true"
            app:tagBackground="@android:color/darker_gray"
            app:tagSelectedDrawableRight="@android:drawable/ic_input_add"
            app:tagTextColor="#FF0000" />

        <DatePicker
            android:id="@+id/birth_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start date of suffering process" />

        <DatePicker
            android:id="@+id/start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finish date of suffering process" />

        <DatePicker
            android:id="@+id/finish_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Burn this person in hell !" />

    </LinearLayout>

</ScrollView>
